<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seu.restaurante.RelatorioViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Button onAction="#voltarParaMesas" text="&lt; Voltar para Mesas" style="-fx-background-color: transparent; -fx-text-fill: -fx-accent; -fx-font-weight: bold;"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </HBox>
        <Label fx:id="labelTituloRelatorio" text="Relatório de Vendas Atuais">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox styleClass="painel-sombreado" spacing="10.0" style="-fx-background-color: -fx-base-light; -fx-background-radius: 5px; -fx-padding: 10px;">
            <children>
                <Label text="Filtros:" style="-fx-font-weight: bold;" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Funcionário:" />
                        <ComboBox fx:id="comboFuncionario" prefWidth="150.0" promptText="Todos" />
                        <Label text="Período:" />
                        <DatePicker fx:id="datePickerInicio" promptText="Data de Início" />
                        <Label text="até" />
                        <DatePicker fx:id="datePickerFim" promptText="Data de Fim" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="botaoLimparFiltro" onAction="#limparFiltro" text="Limpar Filtros" />
                        <Button fx:id="botaoFiltrar" onAction="#aplicarFiltro" text="Aplicar Filtros" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <TableView fx:id="tabelaPedidosPagos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colunaPedidoId" prefWidth="75.0" text="ID Pedido" />
                <TableColumn fx:id="colunaMesaId" prefWidth="75.0" text="Nº Mesa" />
                <TableColumn fx:id="colunaFuncionario" prefWidth="150.0" text="Funcionário" />
                <TableColumn fx:id="colunaValorTotal" prefWidth="120.0" text="Valor Total (R$)" />
                <TableColumn fx:id="colunaDataHora" prefWidth="200.0" text="Data e Hora" />
            </columns>
        </TableView>

        <VBox alignment="CENTER_RIGHT" spacing="5.0">
            <children>
                <Label fx:id="labelTotalPedidos" text="Total de Pedidos: 0">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="labelFaturamentoTotal" text="Faturamento Total: R$ 0,00">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>

        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="botaoArquivar" onAction="#arquivarVendas" text="Arquivar Vendas Atuais" />
                <Button fx:id="botaoAlternarVisao" onAction="#alternarVisao" text="Ver Vendas Arquivadas" />
            </children>
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>