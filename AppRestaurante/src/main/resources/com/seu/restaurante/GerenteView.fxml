<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seu.restaurante.GerenteViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Button onAction="#voltarParaMesas" text="&lt; Voltar para Mesas" style="-fx-background-color: transparent; -fx-text-fill: -fx-accent; -fx-font-weight: bold;"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" /> </VBox.margin>
        </HBox>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Módulo do Gerente" />
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-size: 20px;" text="Itens do Cardápio" />
                        <TableView fx:id="tabelaCardapio" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="colunaId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colunaNome" prefWidth="150.0" text="Nome" />
                                <TableColumn fx:id="colunaPreco" prefWidth="100.0" text="Preço" />
                            </columns>
                        </TableView>
                        <VBox styleClass="painel-sombreado" spacing="5.0" style="-fx-background-color: -fx-base-light; -fx-background-radius: 5px; -fx-padding: 10px;">
                            <children>
                                <Label text="Adicionar / Editar Item:" style="-fx-font-weight: bold;" />
                                <HBox spacing="10.0">
                                    <children>
                                        <TextField fx:id="campoId" editable="false" promptText="ID (Automático)" />
                                        <TextField fx:id="campoNome" promptText="Nome do Prato" HBox.hgrow="ALWAYS" />
                                        <TextField fx:id="campoPreco" promptText="Preço (ex: 55.00)" />
                                    </children>
                                </HBox>
                                <TextField fx:id="campoDescricao" promptText="Descrição" />
                                <TextField fx:id="campoCategoria" promptText="Categoria (ex: Pizzas)" />
                                <Button fx:id="botaoAdicionarSalvar" onAction="#salvarItem" text="Salvar Item" maxWidth="Infinity" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="labelFichaTecnicaTitulo" style="-fx-font-size: 20px;" text="Ficha Técnica" />
                        <ListView fx:id="listaIngredientesDaReceita" prefHeight="200.0" />
                        <VBox styleClass="painel-sombreado" spacing="5.0" style="-fx-background-color: -fx-base-light; -fx-background-radius: 5px; -fx-padding: 10px;">
                            <children>
                                <Label text="Adicionar Ingrediente à Receita:" style="-fx-font-weight: bold;" />
                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <children>
                                        <ComboBox fx:id="comboIngredientesDisponiveis" promptText="Escolha um ingrediente" HBox.hgrow="ALWAYS" />
                                        <TextField fx:id="campoQuantidadeUsada" prefWidth="80.0" promptText="Qtd." />
                                        <Button fx:id="botaoAdicionarIngrediente" onAction="#adicionarIngredienteNaReceita" text="Adicionar" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="botaoRemoverIngrediente" onAction="#removerIngredienteDaReceita" text="Remover Ingrediente Selecionado" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                                        <Button fx:id="botaoSalvarFicha" onAction="#salvarFichaTecnica" text="Salvar Ficha Técnica" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>