<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seu.restaurante.PedidoViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="labelTitulo" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Detalhes do Pedido - Mesa X" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <ComboBox fx:id="comboCardapio" prefWidth="250.0" promptText="Selecione um item..." />
                <Button fx:id="botaoAdicionar" onAction="#adicionarItemAoPedido" text="Adicionar Item" />
                <Button fx:id="botaoRemover" onAction="#removerItemDoPedido" text="Remover Item" />
            </children>
        </HBox>
        <ListView fx:id="listaItensPedido" prefHeight="200.0" prefWidth="350.0" />

        <VBox spacing="5.0">
            <children>
                <Label text="Observações:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="textAreaObservacao" prefHeight="70.0" wrapText="true" />
                <Button fx:id="botaoSalvarObservacao" onAction="#salvarObservacao" text="Salvar Observação" maxWidth="Infinity" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>
        <Label fx:id="labelValorTotal" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Valor Total: R$ 0.00">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <Button fx:id="botaoFecharConta" onAction="#fecharConta" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-base: #28a745;" text="Fechar Conta e Liberar Mesa">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>